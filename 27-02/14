#include<stdio.h>
int main(){
    int days,count=0;
    int day_mm,i,sum=0;

    scanf("%d",&days);

    for(i=0;i<days;i++){
        scanf("%d",&day_mm);
        sum=sum+day_mm;

           if(day_mm>50){
        count++;
    }
    }

 

    printf("total rain fall : %d\n",sum);
    printf("heavy rain days : %d",count);

    return 0;
}
